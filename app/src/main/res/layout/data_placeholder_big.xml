<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/card_click_effect"
    android:paddingBottom="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/blue_light_shimmer"/>

        <View
            android:layout_width="160dp"
            android:layout_height="@dimen/text_size_big"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/blue_light_shimmer"/>

        <View
            android:layout_width="240dp"
            android:layout_height="@dimen/text_size_big"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/blue_light_shimmer"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="160dp"
                android:layout_height="@dimen/text_size_normal"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_main"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@color/blue_light_shimmer"/>

            <View
                android:layout_width="@dimen/margin_main"
                android:layout_height="@dimen/margin_big"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_main"
                android:background="@color/blue_light_shimmer"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>