<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_main"
    android:layout_marginTop="@dimen/margin_main"
    android:layout_marginEnd="@dimen/margin_main"
    android:elevation="@dimen/margin_big"
    android:foreground="@drawable/card_click_effect"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:maxLines="4"
        android:text="@string/text_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/text_date_time"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/showMore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="@dimen/margin_small"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:src="@drawable/ic_show_more" />

    <FrameLayout
        android:id="@+id/frameShowMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="bottom|end">

        <ImageView
            android:id="@+id/circleMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:src="@drawable/circle_menu" />

        <ImageView
            android:id="@+id/closeMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/margin_small"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/ic_close"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/shareNews"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="@dimen/margin_main"
            android:src="@drawable/ic_share"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/commentNews"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/margin_main"
            android:layout_marginBottom="55dp"
            android:src="@drawable/ic_comment"
            app:tint="@color/blue" />
    </FrameLayout>

</androidx.cardview.widget.CardView>
