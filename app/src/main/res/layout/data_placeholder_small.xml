<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_main"
    android:layout_marginTop="@dimen/margin_main"
    android:layout_marginEnd="@dimen/margin_main"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/card_click_effect">

    <View
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="start"
        android:background="@color/blue_light_shimmer"/>

    <View
        android:id="@+id/textViewTitle"
        android:layout_width="150dp"
        android:layout_height="@dimen/text_size_normal"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@color/blue_light_shimmer"
        android:layout_marginTop="@dimen/margin_small"/>

    <View
        android:id="@+id/textViewTitle2"
        android:layout_width="120dp"
        android:layout_height="@dimen/text_size_normal"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@color/blue_light_shimmer"
        android:layout_marginTop="@dimen/margin_biggest"/>

    <View
        android:layout_width="80dp"
        android:layout_height="@dimen/text_size_normal"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/blue_light_shimmer">
    </View>

    <View
        android:id="@+id/showMore"
        android:layout_width="@dimen/margin_main"
        android:layout_height="@dimen/margin_big"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_main"
        android:background="@color/blue_light_shimmer"/>

</FrameLayout>