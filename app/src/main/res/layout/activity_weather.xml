                android:id="@+id/imageViewIconDay1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textViewTempDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_min_max"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_main"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan 3."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_gravity="start|center_vertical" />
            <ImageView
                android:id="@+id/imageViewIconDay2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textViewTempDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_min_max"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_main"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan 4."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_gravity="start|center_vertical" />
            <ImageView
                android:id="@+id/imageViewIconDay3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textViewTempDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_min_max"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_main"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan 5."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_gravity="start|center_vertical" />
            <ImageView
                android:id="@+id/imageViewIconDay4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textViewTempDay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_min_max"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_main"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan 6."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_gravity="start|center_vertical" />
            <ImageView
                android:id="@+id/imageViewIconDay5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textViewTempDay5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_min_max"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_main"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan 7."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:layout_gravity="start|center_vertical" />
            <ImageView
                android:id="@+id/imageViewIconDay6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textViewTempDay6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_min_max"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>