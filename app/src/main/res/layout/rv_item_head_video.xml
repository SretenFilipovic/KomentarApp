<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_main"
        android:layout_marginEnd="@dimen/margin_main"
        android:layout_marginBottom="@dimen/margin_main"
        android:clickable="true"
        android:elevation="@dimen/margin_big"
        android:focusable="true"
        android:foreground="@drawable/card_click_effect">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:foreground="@drawable/gradient_image_view"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_video_play" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_main"
            android:layout_marginBottom="34dp"
            android:maxLines="4"
            android:text="@string/text_title_example"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginBottom="@dimen/margin_main"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_category"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textViewCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_date_time"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/showMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_show_more"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_gravity="bottom|end"
            app:tint="@color/white" />

        <FrameLayout
            android:id="@+id/frameShowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/circleMenu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/circle_menu"
                android:layout_gravity="end"/>

            <ImageView
                android:id="@+id/closeMore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_close"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_gravity="end|bottom"
                app:tint="@color/blue"/>

            <ImageView
                android:id="@+id/shareNews"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_share"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/margin_main"
                android:layout_marginEnd="55dp"
                app:tint="@color/blue"/>

            <ImageView
                android:id="@+id/commentNews"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_comment"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/margin_main"
                android:layout_marginBottom="55dp"
                app:tint="@color/blue"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>